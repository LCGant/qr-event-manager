<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base da aplicação -->
    <style name="Theme.SeuApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/azul_escuro</item>
        <item name="cornerRadius">24dp</item>
    </style>

</resources>
